<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrlView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tareaTituloD"
            android:lines="2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tareaResponsableD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tareaPrioridadD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tareaMinutosAsignadosD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tareaMinutosTrabajadosD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <CheckBox
                android:id="@+id/tareaFinalizadaD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tarea Finalizada" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="240dp"
            android:layout_height="wrap_content">

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="240dp"
            android:layout_height="wrap_content"></LinearLayout>
    </LinearLayout>
</ScrollView>